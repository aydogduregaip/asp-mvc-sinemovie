
@if (@HttpContext.Current.User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="be-comment-block">
            <h1 class="comments-title">Yorumlar</h1>
            <div>
                <form method="post">
                    <fieldset>
                        <div>
                            <div class="form-group">
                                <input type="text" placeholder="ID" required name="movie_id" value="@ViewBag.deger" hidden />
                                <input type="text" placeholder="ID" required name="username" value="@HttpContext.Current.User.Identity.Name" hidden />
                                <textarea class="form-control yorum-area" id="message" name="comment" placeholder="Yorumunuzu buraya yazın...(Max. 2500 karakter)" required=""></textarea>
                                <button type="submit" class="btn mt-2 yorum-btn">Yorum Yap</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                
            </div>
        </div>
    </div>
}

