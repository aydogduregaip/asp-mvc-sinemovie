<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Yaş</th>
            <th>Cinsiyet</th>
            <th>Doğum Yeri</th>
            <th>Biyografi</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Sitede Görüntüle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var y in Model)
        {
        <tr>
            <td>@y.id</td>
            <td>@y.name</td>
            <td>@y.age</td>
            <td>@y.gender</td>
            <td>@y.country</td>
            <td>@y.biography</td>
            <td><a href="/Admin/DeleteActor/@y.id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
            <td><a href="/Admin/EditActor/@y.id" class="btn btn-warning"><i class="fas fa-edit"></i></a></td>
            <td><a href="/Home/OyuncuDetay/@y.id" class="btn btn-dark" target="_blank"><i class="fas fa-eye"></i></a></td>
        </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Yaş</th>
            <th>Cinsiyet</th>
            <th>Doğum Yeri</th>
            <th>Biyografi</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Sitede Görüntüle</th>
        </tr>
    </tfoot>
</table>

