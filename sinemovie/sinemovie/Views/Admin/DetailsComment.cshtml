<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Kullanıcı Adı</th>
            <th>Film</th>
            <th>Yorum</th>
            <th>Yapıldığı Tarih</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>
                <td>@y.id</td>
                <td>@y.username</td>
                <td>@y.movies.name</td>
                <td>@y.comment</td>
                <td>@y.date</td>
                <td><a href="/Admin/DeleteComment/@y.id" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
                <td><a href="/Admin/EditComment/@y.id" class="btn btn-warning"><i class="fas fa-edit"></i></a></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>Id</th>
